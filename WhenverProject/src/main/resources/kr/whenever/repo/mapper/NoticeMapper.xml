<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="kr.whenever.repo.mapper.NoticeMapper">
	<resultMap type="kr.whenever.domain.Notice" id="noticeReultMap">
		<id property="id" column="id" />
		<result property="title" column="notice_title" />
		<result property="content" column="notice_content" />
	</resultMap>
	<insert id="insertNotice" parameterType="Notice">
		INSERT INTO w_notice (
		NOTICE_TITLE
		,NOTICE_CONTENT
		)
		VALUES (
		#{title}
		,#{content}
		)
	</insert>

	<update id="updateNotice" parameterType="Notice">
		UPDATE w_notice
		SET
		NOTICE_TITLE = #{title}
		,NOTICE_CONTENT = #{content}
		WHERE NOTICE_ID = #{id};
	</update>

	<delete id="deleteNotice" parameterType="Long">
		DELETE
		FROM w_notice
		WHERE id = #{id}
	</delete>

	<select id="selectNotice" resultMap="noticeResultMap">
		select
		NOTICE_ID,
		NOTICE_TITLE,
		NOTICE_CONTENT
		from w_notice
	</select>
	<select id="selectNoticeList" resultMap="noticeResultMap">
		SELECT
		NOTICE_ID
		,NOTICE_TITLE
		,NOTICE_CONTENT
		from w_notice
	</select>


</mapper> 